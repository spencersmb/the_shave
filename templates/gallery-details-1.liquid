{% block styles %}
    {{ "flickity.min.css" | asset_url | stylesheet_tag }}
{% endblock %}
{% block content %}
    <!--
    #################################
           - Gallery-Details -
    #################################
    -->
    <div class="section container-fluid white-bg container-push-xs">
        <div class="row sv__container--sm">
            <div class="col-xs-12 inner__header--sm">
                <h2>CasaNova</h2>
                <h3>Breaking every single heart in town</h3>
            </div>
        </div>
    </div><!-- end header -->

    <!-- Flickity Feature Gallery -->
    <div class="section container-fluid grey-bg no-padding ">

        <div class="angle-top" style="color: rgb(232, 232, 232); border-right-color:rgb(232, 232, 232);"></div>

        <div class="sv__container--md inner-lg space-desktop-lg">

            <div class="row no-margin">

                <div class="col-md-7 no-padding">

                    <!-- feature gallery -->
                    <div class="gallery__inner--feature gallery__slider">

                        <div class="gallery__inner--content">

                            <!-- Flickity HTML init -->
                            <div class="gallery gallery-main">
                                <!-- Flickity image -->
                                <div class="gallery-cell">
                                    <img class="img-responsive" src="{{ 'casanova-lg-1.jpg' | asset_url}}" alt="The Shave BarberShop Theme">
                                </div>
                                <!-- Flickity image -->
                                <div class="gallery-cell">
                                    <img class="img-responsive" src="{{ 'casanova-lg-2.jpg' | asset_url}}" alt="The Shave BarberShop Theme">
                                </div>
                                <!-- Flickity image -->
                                <div class="gallery-cell">
                                    <img class="img-responsive" src="{{ 'casanova-lg-3.jpg' | asset_url}}" alt="The Shave BarberShop Theme">
                                </div>
                                <!-- Flickity image -->
                                <div class="gallery-cell">
                                    <img class="img-responsive" src="{{ 'casanova-lg-4.jpg' | asset_url}}" alt="The Shave BarberShop Theme">
                                </div>
                            </div>

                            <!--flickity sub-nav -->
                            <div id="subNav" class="gallery-nav">
                                <!-- Flickity image -->
                                <div class="gallery-cell">
                                    <img class="img-responsive" src="{{ 'casanova-sm-1.jpg' | asset_url}}" alt="The Shave BarberShop Theme">
                                </div>
                                <!-- Flickity image -->
                                <div class="gallery-cell">
                                    <img class="img-responsive" src="{{ 'casanova-sm-2.jpg' | asset_url}}" alt="The Shave BarberShop Theme">
                                </div>
                                <!-- Flickity image -->
                                <div class="gallery-cell">
                                    <img class="img-responsive" src="{{ 'casanova-sm-3.jpg' | asset_url}}" alt="The Shave BarberShop Theme">
                                </div>
                                <!-- Flickity image -->
                                <div class="gallery-cell">
                                    <img class="img-responsive" src="{{ 'casanova-sm-4.jpg' | asset_url}}" alt="The Shave BarberShop Theme">
                                </div>
                            </div>

                        </div><!-- end offset content -->

                    </div> <!-- end gallery slider -->

                </div><!-- end col-7 -->

                <div class="col-md-5 no-padding">
                    <div class="sv__container--md ">

                        <div class="stats__container">

                            <div class="stats__details">
                                <h3>The CasaNova Style</h3>
                                <h4>$35</h4>
                                <p>The gentler side of a gentleman is captured in the Casanova Style; soft edges, full blow out with a longer hair fade from bottom to top. Be approachable and confident with this persuasively cavalier style.</p>
                            </div>

                            <div class="gallery-details clearfix">

                                <h4><a role="button" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">Style Details <span><i class="fa fa-chevron-down"></i></span></a></h4>

                                <div class="collapse" id="collapseExample">

                                    <ul>
                                        <li>Straight hair preferred.</li>
                                        <li>25-30min.</li>
                                        <li>For rounder or pear shaped faces.</li>
                                        <li>Minor layers throughout, top blowout 2‚Äù minimum length.</li>
                                    </ul>

                                </div><!-- end collapse -->

                            </div><!-- end gallery details -->

                            <div class="space-sm">
                                <div class="style__btn">
                                    <div class="btn-group" role="group" aria-label="Styles">
                                        <a role="button" class="btn book-now-btn" data-toggle="modal" data-target="#bookNowModal">Get this style</a>
                                        <a role="button" href="/full-gallery" class="btn book-now-btn">Back To Gallery</a>
                                    </div>
                                </div>
                            </div><!-- end spacer -->

                        </div><!-- end stats container -->

                    </div><!-- end container -->

                </div><!-- end col-5 -->

            </div><!-- end row -->

        </div><!-- end container -->

    </div><!-- end section -->

    {% include "gallery/gallery-social" %}

    {% include "gallery/gallery-product" %}

    <!-- lead img/text block -->
    <div class="section container-fluid no-padding grey-bg">
        <div class="inner-lg">
            <div class="sv__container--sm">
                <div class="row no-margin">
                    <div class="sv-wrapper">
                        <div class="col-sm-12 col-md-6 mobile-space-sm">
                            <div class="headline-sm">
                                <h2 class="text-left">Classy &amp; On Trend</h2>
                            </div>
                            <div class="content">
                                <p><span class="subtext">This theme was built for those who love style. It's an easy to use theme with many considerations:</span></p>
                            </div>
                            <div class="approach-list space-sm">
                                <ul>
                                    <li><i class="fa fa-check"></i><span>Clean, spacious design based on modern web trends</span></li>
                                    <li><i class="fa fa-check"></i><span>Slick gallery styles to keep the client browsing</span></li>
                                    <li><i class="fa fa-check"></i><span>Revolution Slider plugin included with the theme</span></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6 margin-left-5 col-half mobile-space-tb">
                            <img class="img-responsive img-center active" src="{{'bottle-1.jpg' | asset_url}}" alt="Mobile Phone">
                        </div>
                    </div><!-- end wrapper -->
                </div><!-- end row -->
            </div><!-- end container sm -->
        </div><!-- end inner-lg -->
    </div><!-- end lead img/text block -->

    {% include "gallery/style-1/style-1-related" %}

{% endblock %}
{% block scripts %}
    {{ "flickity.pkgd.min.js" | asset_url | script_tag }}
    {{ "flickity-settings.js" | asset_url | script_tag }}
    {{ "gallery-details.js" | asset_url | script_tag }}
{% endblock %}
