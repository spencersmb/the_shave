{% block scripts %}
	<script>

		$(function() {
			// ==========================================================================
			// Team page active team bio
			// ==========================================================================

			var wrapper = $('.team__wrapper--effect');

			wrapper.on('click', function(event){
				event.preventDefault();

				//check if element is hovered or not
				var isHovered = $(this).find(".book__app:hover").length;

				if( $(this).find('.content__wrapper').hasClass('active') && isHovered ){
					//do nothing because the user is hovering over an item
				}else{
//					closeNav();
					$(this).find('.content__wrapper').toggleClass('active');

					$(this).find('.book__app').toggleClass('active');
				}

			});

			function openTab(url){
				window.open(url, '_blank');
			}

			wrapper.find('.book__app').find('a').on('click', function(event){

				var url = $(this).attr('href');
				openTab(url);
			});

		});
	    
	</script>
